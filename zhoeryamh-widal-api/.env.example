APP_NAME="Widal API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000

# Logging: use 'stderr' for Docker/VPS, 'stack' for local
LOG_CHANNEL=stderr
LOG_LEVEL=info

# Database (set to null if you don't want DB logging)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=widal
DB_USERNAME=widal
DB_PASSWORD=secret

# Docker port (only for docker-compose)
APP_PORT=8000
DB_ROOT_PASSWORD=rootsecret

# Cache & Session (file works without Redis)
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Feature flags
WIDAL_ENABLE_DB_LOG=false
