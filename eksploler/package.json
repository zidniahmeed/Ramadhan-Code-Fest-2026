{
  "name": "home-analyzer",
  "version": "1.0.0",
  "description": "Analisis isi home directory dengan fitur lengkap",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "home-analyzer": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --target=node --outdir=dist && bun build src/server.ts --target=bun --outdir=dist",
    "build:cli": "bun build src/index.ts --target=node --outdir=dist",
    "build:web": "bun build src/server.ts --target=bun --outdir=dist",
    "start": "bun run dist/index.js",
    "web": "bun run dist/server.js",
    "dev": "bun run --watch src/index.ts",
    "dev:web": "bun run --watch src/server.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": ["directory", "analyzer", "filesystem", "home", "ls", "cli", "web", "api"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}